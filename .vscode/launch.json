{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "uv: src",
      "type": "node-terminal",
      "request": "launch",
      "command": "echo 'all' | uv run src",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "uv: cli",
      "type": "node-terminal",
      "request": "launch",
      "command": "uv run src",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "uv: test_pixels",
      "type": "node-terminal",
      "request": "launch",
      "command": "uv run -m tests.test_pixels",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    }
  ]
}
